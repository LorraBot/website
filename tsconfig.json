{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["ESNext", "DOM", "WebWorker"],
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["node", "vite/client", "vite-plugin-pages/client"],
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}